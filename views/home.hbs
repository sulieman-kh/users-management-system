{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Пользователь удален.
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="row">
  <div class="col-6"><h1>Пользователи
      <img
        src="employees-svgrepo-com.svg"
        alt="employees-icon"
        style="width: 50px; height:50px;"
      />
    </h1></div>
  <div class="col-6 d-flex justify-content-end gap-2">
    <a href="/adduser" type="button" class="btn btn-dark align-self-center"><img
        src="add-user-add-svgrepo-com.svg"
        alt="edit-icon"
        style="width: 30px; height:30px;"
      />
      Добавить</a>

    <a
      href="/usersactivities"
      type="button"
      class="btn btn-dark align-self-center"
    ><img
        src="history-svgrepo-com.svg"
        alt="edit-icon"
        style="width: 30px; height:30px;"
      />
      Архив</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr style="text-align: center;">
      <th scope="col">#</th>
      <th scope="col">Фото</th>
      <th scope="col">Имя пользователя</th>
      <th scope="col">Имя</th>
      <th scope="col">Фамилия</th>
      <th scope="col">Эмайл</th>
      <th scope="col">Телефон</th>
      <th scope="col">Комментарий</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
      <tr style="text-align: center;">
        <th scope="row">{{this.id}}</th>
        <th>
          {{#if this.userimage}}
            <img
              class="card-image"
              style="width: 75px; height: 75px; border-radius: 50%"
              src="{{this.userimage}}"
              alt="user-profile"
            />
          {{else}}
            <img
              class="card-image"
              src="person-svgrepo-com.svg"
              alt="user-profile"
              style="width: 80px; height: 80px; border-radius: 50%"
            />
          {{/if}}
        </th>
        <td>{{this.username}}</td>
        <td>{{this.firstname}}</td>
        <td>{{this.lastname}}</td>
        <td>{{this.email}}</td>
        <td>{{this.phone}}</td>
        <td>{{this.comment}}</td>
        <td class="d-flex gap-2">
          <a
            href="/edituser/{{this.id}}"
            type="button"
            class="btn btn-dark btn-small"
          ><img
              src="edit-svgrepo-com.svg"
              alt="edit-icon"
              style="width: 20px; height:20px;"
            /><i class="bi bi-pencil"></i>
            Редактировать</a>

          <a href="/{{this.id}}" type="button" class="btn btn-dark btn-small"><i
              class="bi bi-person-x"
            ><img
                src="user-svgrepo-com.svg"
                alt="edit-icon"
                style="width: 20px; height:20px;"
              /></i>
            Удалить</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>